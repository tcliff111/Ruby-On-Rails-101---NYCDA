<% theme = "default" %>
	<% if post.theme %>
		<% theme = post.theme %>
	<% end %>
	<%= ("<div class='" + theme + "'>").html_safe %>
		<br />
		<hr>
		<h3>
			<%= post.title %>
		</h3>
		<i>
			<%= post.created_at.to_formatted_s(:long_ordinal) %>
			<% if post.user_id == current_user.id %>
			&nbsp;	<%= link_to 'Edit', edit_post_url(post.id) %>
			<% end %>
			&nbsp;	<%= link_to 'Show', post_url(post.id) %>
		</i>
		<br />
		<br />
		<% if post.image_url %>
			<%= ("<img width='300px' src='" + CGI.escapeHTML(post.image_url) + "'>").html_safe %>
		<% end %>
		<% if post.user %>
			<h4>
				<%= "By " + post.user.email %>
			</h4>
		<% end %>
		<% if post.text %>
			<p>
				<%= post.text %>
			</p>
		<% end %>
	<%= "</div>".html_safe %>