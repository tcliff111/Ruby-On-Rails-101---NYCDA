<%= form_for @event do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br />
	<%= f.label :description %>
    <%= f.text_area :description, :cols => "23", :rows => "3" %>
	<br />
	<%= f.label :location %>
	<%= f.text_field :location %>
	<br />
	<%= f.label :date %>
	<%= f.datetime_local_field :date %>
	<br />
	<%= f.submit :create %>
<% end %>